<script>
  const datePicker1 = document.getElementById('datePicker1');
  const dayInput1 = document.getElementById('day1');
  const monthInput1 = document.getElementById('month1');
  const yearInput1 = document.getElementById('year1');

  datePicker1.addEventListener('change', function () {
      const selectedDate = new Date(datePicker1.value);

      const day = selectedDate.getDate();
      const month = selectedDate.getMonth() + 1; // January is 0, so we add 1
      const year = selectedDate.getFullYear();

      dayInput1.value = day;
      monthInput1.value = month;
      yearInput1.value = year;

      calculateCost();
  });

  const datePicker2 = document.getElementById('datePicker2');
  const dayInput2 = document.getElementById('day2');
  const monthInput2 = document.getElementById('month2');
  const yearInput2 = document.getElementById('year2');

  datePicker2.addEventListener('change', function () {
      const selectedDate = new Date(datePicker2.value);

      const day = selectedDate.getDate();
      const month = selectedDate.getMonth() + 1; // January is 0, so we add 1
      const year = selectedDate.getFullYear();

      dayInput2.value = day;
      monthInput2.value = month;
      yearInput2.value = year;

      calculateCost();
  });

  document.getElementById('numberOfPeople').addEventListener('change', function () {
      calculateCost();
  });

  function calculateCost() {
    const numberOfPeople = document.getElementById('numberOfPeople').value;
    const apartmentType = document.getElementById('apartmentType').value;
    const startDate = new Date(datePicker1.value);
    const endDate = new Date(datePicker2.value);
    const numberOfDays = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));

    // You can adjust the cost calculation based on your requirements
    const costPerPerson = 50; // Adjust this value as needed
    const totalCost = numberOfPeople * costPerPerson * numberOfDays;

    document.getElementById('estimatedCost').innerText = `Odhadovaná cena: ${totalCost} €`;
  }

  function showThankYouMessage() {
    document.getElementById('thankYouMessage').style.display = 'block';
  }

  var submitted = false;
</script>

